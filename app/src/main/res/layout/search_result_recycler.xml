<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycler_view_holder"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:backgroundTint="#EAEAEA">

    <ImageView
        android:id="@+id/result_camp_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#FFFFFF" />

    <Space
        android:layout_width="8dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_camp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="캠핑장 이름"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <TextView
            android:id="@+id/result_camp_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="캠핑장 주소"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

        <TextView
            android:id="@+id/result_camp_line_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="캠핑장 한 줄 소개"
            android:textColor="@color/black"
            android:textSize="14sp"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

        <TextView
            android:id="@+id/result_camp_feature_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="캠핑장 소개"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:maxLines="7"/>

    </LinearLayout>

</LinearLayout>